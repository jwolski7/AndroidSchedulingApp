<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication" >

        <activity
            android:name=".UI.EditShiftActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ViewDayActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ViewWeeklyCalendarActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.EmployeeInfoActivity"
            android:exported="false"
            android:parentActivityName=".UI.ViewEmployeesActivity" />
        <activity
            android:name=".UI.AddEmployeeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.EditEmployeeActivity"
            android:exported="false" />
        <activity
            android:name=".UI.ViewEmployeesActivity"
            android:exported="false"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.ViewCalendarActivity"
            android:exported="false" />
    </application>

</manifest>